---
import { Image } from 'astro:assets';

const imageFiles = await Astro.glob('../assets/heroImages/*');
console.log(imageFiles);
---

<div class='hero-images'>
  {
    imageFiles.map((img, i) => (
      <Image
        src={img.default}
        width='600'
        alt={`Classical watercolor painting ${i}`}
        class='image-box'
      />
    ))
  }
</div>

<style>
  .hero-images {
    position: absolute;
    top: 10%;
    right: 5%;
    width: 50%;
    height: 80%;
  }

  .image-box {
    position: absolute;
    width: 200px;
    height: 150px;
    border-radius: 10px;
    transition: transform 0.3s ease-in-out;
  }

  /* Adjust positioning for random overlap */
  .image-box:nth-child(1) {
    top: 10%;
    left: 10%;
    z-index: 1;
    /* background-color: red; */
  }

  .image-box:nth-child(2) {
    top: 30%;
    left: 40%;
    z-index: 2;
    background-color: blue;
  }

  .image-box:nth-child(3) {
    top: 50%;
    left: 15%;
    z-index: 3;
    background-color: yellow;
  }

  .image-box:nth-child(4) {
    top: 70%;
    left: 35%;
    z-index: 1;
    background-color: purple;
  }

  /* Mobile Responsive */
  @media (max-width: 1024px) {
    .hero-images {
      position: relative;
      width: 100%;
      height: auto;
      display: flex;
      flex-wrap: wrap;
      justify-content: center;
      gap: 10px;
      margin-top: 20px;
    }

    .image-box {
      position: relative;
      width: 45%;
      height: 150px;
    }
  }
</style>
