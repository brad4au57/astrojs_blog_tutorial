---
import Layout from './Layout.astro';
const { frontmatter } = Astro.props;
const displayTags =
  frontmatter.tags &&
  frontmatter.tags.map((tag: string) => tag.toUpperCase()).join(', ');
---

<Layout pageTitle={frontmatter.title}>
  <img src={frontmatter.image.url} alt={frontmatter.image.alt} width='50%' />
  <p>Written by {frontmatter.author}</p>
  <p><em>{frontmatter.description}</em></p>
  <slot />
  <p>Published on: {frontmatter.pubDate.toString().slice(0, 10)}</p>

  {
    frontmatter.tags && (
      <strong>TAGS: {frontmatter.tags.join(', ').toUpperCase()}</strong>
    )
  }
</Layout>
